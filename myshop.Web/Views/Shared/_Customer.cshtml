        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        }

        .team-section {
        padding: 5rem 0;
        background: #f9fafb;
        }

        .team-card {
        transition: all 0.3s ease;
        border: 1px solid rgba(0, 0, 0, 0.05);
        padding: 2rem;
        text-align: center;
        background: white;
        border-radius: 16px;
        }

        .team-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1) !important;
        }

        .team-card img {
        border: 3px solid #f3f4f6;
        transition: all 0.3s ease;
        width: 150px;
        height: 150px;
        object-fit: cover;
        margin-bottom: 1rem;
        }

        .team-card:hover img {
        border-color: var(--primary);
        }

        .social-links a {
        display: inline-flex;
        width: 36px;
        height: 36px;
        background: #f3f4f6;
        color: var(--dark);
        border-radius: 50%;
        align-items: center;
        justify-content: center;
        margin: 0 5px;
        transition: all 0.3s ease;
        }

        .social-links a:hover {
        background: var(--primary);
        color: white;
        transform: translateY(-3px);
        }

        /*----- Animations -----*/
        @@keyframes fadeInUp {
        from {
        opacity: 0;
        transform: translateY(30px);
        }

        to {
        opacity: 1;
        transform: translateY(0);
        }
        }

        @@keyframes float {
        0%, 100% {
        transform: translateY(0);
        }

        50% {
        transform: translateY(-10px);
        }
        }

        /*----- Responsive Design -----*/
        @@media (max-width: 992px) {
        .hero-title {
        font-size: 3rem;
        }

        .hero-subtitle {
        font-size: 1.25rem;
        }

        .about-section {
