        justify-content: center;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        margin-right: 0.75rem;
        transition: all 0.3s ease;
        }

        .social-icons a:hover {
        background: var(--primary);
        transform: translateY(-5px);
        }

        /*----- About Page Styles -----*/
        .about-section {
        position: relative;
        overflow: hidden;
        padding: 5rem 0;
        }

        .about-image {
        position: relative;
        }

        .experience-box {
        position: absolute;
        bottom: -20px;
        right: -20px;
        width: 150px;
        text-align: center;
        z-index: 2;
        background: var(--gradient);
        color: white;
        padding: 1rem;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .icon-box {
