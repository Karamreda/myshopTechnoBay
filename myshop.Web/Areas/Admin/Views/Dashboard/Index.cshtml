@{
    ViewBag.PageTitle = "Admin Area";
    ViewBag.CardTitle = "Dashboard";
}

<!-- Ionicons -->
<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

<div class="row">
    <!-- Small box for Orders -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-primary">
            <div class="inner">
                <h3>@ViewBag.Orders</h3>
                <p>All Orders</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="/Admin/Order/Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Small box for Approved Orders -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@ViewBag.ApprovedOrders</h3>
                <p>Approved Orders</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/Admin/Order/Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Small box for Users Registrations -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@ViewBag.Users</h3>
                <p>User Registrations</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="/Admin/Users/Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Small box for Products -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@ViewBag.Products</h3>
                <p>Products</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="/Admin/Product/Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* General Styles for Small Box */
        .small-box {
            position: relative;
            display: block;
            background: #fff;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            overflow: hidden;
            border: 1px solid #f1f1f1;
        }

            /* Inside the small-box */
            .small-box .inner {
                padding: 20px;
            }

            .small-box h3 {
                font-size: 2rem;
                margin: 0;
                font-weight: 600;
                color: #333;
            }

            .small-box p {
                font-size: 1rem;
                font-weight: 500;
                color: #555;
            }

            /* Icon Style */
            .small-box .icon {
                position: absolute;
                top: 15px;
                right: 15px;
                font-size: 3rem;
                color: rgba(0, 0, 0, 0.15);
            }

        /* More info Link */
        .small-box-footer {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0, 0, 0, 0.1);
            padding: 15px;
            text-align: center;
            font-weight: 600;
            color: #007bff;
            text-decoration: none;
            border-radius: 0 0 15px 15px;
            transition: background 0.3s ease;
        }

            .small-box-footer:hover {
                background: rgba(0, 0, 0, 0.2);
                color: #0056b3;
            }

        /* Background Color for Different Boxes */
        .small-box.bg-primary {
            background-color: #3498db !important;
        }

        .small-box.bg-success {
            background-color: #2ecc71 !important;
        }

        .small-box.bg-warning {
            background-color: #f39c12 !important;
        }

        .small-box.bg-danger {
            background-color: #e74c3c !important;
        }

        /* Hover Effect */
        .small-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
        }
    </style>
}
