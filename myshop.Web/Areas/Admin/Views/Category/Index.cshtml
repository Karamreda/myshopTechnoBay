@model IEnumerable<Category>

@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "View Categories";
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark">@ViewBag.CardTitle</h2>
    <a class="btn btn-success px-4 py-2 rounded-3 text-white fw-semibold" href="/Admin/Category/Create">
        <i class="fa fa-plus me-2"></i> Create
    </a>
</div>

<table class="table table-striped table-bordered shadow-sm rounded overflow-hidden">
    <thead class="text-white" style="background-color: #343a40;">
        <tr class="text-center">
            <th>Name</th>
            <th>Description</th>
            <th>Date Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color: #f9f9f9;">
                <td>@item.Name</td>
                <td>@Html.Raw(item.Description)</td>
                <td>@item.CreatedTime.ToString("yyyy-MM-dd")</td>
                <td class="text-center">
                    <a class="btn btn-warning btn-sm me-1 text-dark fw-semibold" href="/Admin/Category/Edit/@item.Id">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-danger btn-sm text-white" href="/Admin/Category/Delete/@item.Id">
                        <i class="fa fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
